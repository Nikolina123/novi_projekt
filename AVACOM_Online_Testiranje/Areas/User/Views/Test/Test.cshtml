@{
    ViewBag.Title = "Test";
}

@using AVACOM_Online_Testiranje.Areas.User.Models
@model AVACOM_Online_Testiranje.Areas.User.Models.PitanjeOdgovorVM.PitanjeInfo

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
                <h4>Pitanje: @Model.PitanjeOrder/10</h4>
            </div>
            @*<div class="col-sm-6 col-md-6 col-lg-6">
                <h4 class="pull-right">Vrijeme: 9:20</h4>

            </div>*@
            <div class="col-sm-2 col-md-2 col-lg-2">
                <input type="submit" form="pitanjeForm" formaction="/User/Test/Rezultat?pitanje=@Model.PitanjeOrder" value="Završi" class="btn btn-danger pull-right" style="margin-top:0.1em;" />
            </div>
        </div>
    </div>
    <form id="pitanjeForm" method="post">
        <div class="panel-body">

               

                    @if (Model.Vrsta == "True/False")
                    {

                        Html.RenderPartial("_Truefalse", Model);
                    }
                    else if (Model.Vrsta == "MC-SA")
                    { 
                        Html.RenderPartial("_MCSA", Model);
                    }
                    else
                    {

                       Html.RenderPartial("_MCMA", Model);
                    }

            <input type="hidden" name="Next" value="@Model.PitanjeOrder" />
            <input type="hidden" name="Back" value="@Model.PitanjeOrder" />
        </div>
        <div style="color:red">
            @Html.ValidationSummary()
        </div>
    </form>
    <div class="panel-footer" style="text-align:center">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-lg-6">
                @*@if (Model.PitanjeOrder > 1)
                {
                    @Html.ActionLink("Back", "Back", new { back = Model.PitanjeOrder },
                             new { @class = "btn btn-default pull-right" })
    <input type="submit" form="pitanjeForm" value="Back" formaction="/User/Test/Back" class="btn btn-default pull-right" />
                }*@
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6">
                @if (Model.PitanjeOrder < 10)
                {
                    @*@Html.ActionLink("Next", "Next", new { next = Model.PitanjeOrder, oznaceniOdgovori =  },
                             new { @class = "btn btn-primary pull-left" })*@
    <input type="submit" form="pitanjeForm" formaction="/User/Test/Next" value="Next" class="btn btn-primary pull-left" />
                }
                else
                {
                    <input type="submit" form="pitanjeForm" formaction="/User/Test/Rezultat?pitanje=@Model.PitanjeOrder" value="Završi" class="btn btn-danger pull-left" />
                }
            </div>
        </div>
    </div>
</div>
