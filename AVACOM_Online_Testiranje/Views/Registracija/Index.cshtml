
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registracija</title>
    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="col-lg-6 col-md-offset-3">
        
        <h3 class="page-header center-block">Registracija <small>formular</small> </h3>
        <div class="row">
           
                <form action="/Registracija/Snimi" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label for="ime" class="col-sm-2 control-label">Ime</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="ime" placeholder="Ime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="prezime" class="col-sm-2 control-label">Prezime</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="prezime" placeholder="Prezime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="korisnickoime" class="col-sm-2 control-label">Korisnicko Ime</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="korisnickoime" placeholder="Korisnicko Ime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lozinka" class="col-sm-2 control-label">Lozinka</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" name="lozinka" placeholder="Lozinka">
                        </div>
                    </div>
                    <div style="color:red" class="col-sm-offset-2 col-sm-10">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Sačuvaj</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>